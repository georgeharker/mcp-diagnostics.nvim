        ],
        "title": "Limit"
      },
      "offset": {
        "anyOf": [
          {
            "type": "integer"
          },
          {
            "type": "null"
          }
        ],
        "title": "Offset"
      },
      "collection_name": {
        "type": "string",
        "title": "Collection Name"
      },
      "include": {
        "anyOf": [
          {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          {
            "type": "null"
          }
        ],
        "title": "Include"
      },
      "where_document": {
        "anyOf": [
          {
            "type": "object"
          },
          {
            "type": "null"
          }
        ],
        "title": "Where Document"
      },
      "where": {
        "anyOf": [
          {
            "type": "object"
          },
          {
            "type": "null"
          }
        ],
